{
  "name": "resume-builder-9000",
  "private": true,
  "description": "A resume orchestration engine that creates tailored, ATS-friendly resumes",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm --workspaces run build",
    "clean": "powershell.exe -ExecutionPolicy Bypass -File ./scripts/clean-and-rebuild.ps1",
    "dev": "powershell.exe -ExecutionPolicy Bypass -File ./dev.ps1",
    "dev:ci": "concurrently \"npm run dev --workspace=packages/api\" \"npm run dev --workspace=apps/web\"",
    "test": "npm --workspaces run test",
    "test:watch": "npm --workspaces run test:watch",
    "vitest": "vitest --workspace",
    "vitest:ui": "vitest --workspace --ui",
    "lint": "npm --workspaces run lint",
    "check-flags": "./scripts/check-flags.ps1",
    "update-deps": "npx npm-check-updates -u && npm install",
    "test:unit": "vitest run",
    "test:e2e": "npx playwright test --config=apps/web/tests/e2e/playwright.config.ts",
    "test:e2e:standalone": "npx playwright test --config=apps/web/tests/e2e/playwright.standalone.config.ts",
    "test:all": "npm run test:unit && npm run test:e2e",
    "postinstall": "patch-package",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git"
  },
  "keywords": [
    "resume",
    "ats",
    "job-search",
    "typescript",
    "nextjs"
  ],
  "author": "Resume Builder 9000 Team",
  "license": "MIT",
  "dependencies": {
    "@rb9k/core": "^0.1.0",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/sqlite3": "^3.1.11",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "mammoth": "^1.10.0",
    "morgan": "^1.10.1",
    "pdf-parse": "^1.1.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "vite": "^7.1.5",
    "winston": "^3.17.0",
    "zod": "^4.1.5",
    "zod-openapi": "^5.4.1"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.2.32",
    "@playwright/test": "^1.55.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-local-rules": "^3.0.2",
    "eslint-plugin-prettier": "^5.5.4",
    "next": "14.2.32",
    "node-fetch": "^3.3.2",
    "patch-package": "^8.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "vitest": "^3.2.4"
  },
  "type": "module"
}
